# OpenAI Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# SendGrid Configuration
# Get your API key from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=your_sendgrid_api_key_here

# Email Configuration
# The email address that will send the research reports
FROM_EMAIL=your_sender_email@example.com

# The email address that will receive the research reports
TO_EMAIL=your_recipient_email@example.com

# Application Configuration
# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Maximum number of searches to perform (default: 5)
MAX_SEARCHES=5

# Optional: Custom server configuration
# SERVER_HOST=0.0.0.0
# SERVER_PORT=7860
